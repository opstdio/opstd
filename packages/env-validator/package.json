{
	"name": "@opstd/env-validator",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"build": "tsup src/index.ts src/config.ts --format esm,cjs --dts",
		"dev": "tsup src/index.ts src/config.ts --watch --format esm,cjs --dts",
		"typecheck": "tsc --noEmit",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.4.1",
	"dependencies": {
		"dotenv": "^16.4.7",
		"zod": "^3.24.2",
		"@opstd/logger": "workspace:*"
	},
	"devDependencies": {
		"@opstd/tsconfig": "workspace:*",
		"@types/node": "^22.0.0",
		"tsup": "^8.4.0",
		"tsx": "^4.19.3",
		"typescript": "^5.8.2"
	},
	"tsup": {
		"entry": ["src/index.ts", "src/config.ts"],
		"format": ["esm", "cjs"],
		"dts": true,
		"clean": true
	}
}
