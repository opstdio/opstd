{
	"name": "@opstd/logger",
	"version": "0.1.0",
	"description": "Flexible and configurable logging utility for Opstd projects",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": ["dist"],
	"scripts": {
		"build": "tsc",
		"clean": "rm -rf dist",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"prepublishOnly": "npm run clean && npm run build && npm run test"
	},
	"keywords": ["logger", "logging", "pino", "typescript"],
	"dependencies": {
		"pino": "^9.6.0"
	},
	"devDependencies": {
		"@vitest/coverage-v8": "^0.34.6",
		"pino-logfmt": "^0.1.1",
		"pino-pretty": "^13.0.0",
		"typescript": "^5.2.2",
		"vitest": "^0.34.6",
		"zod": "^3.24.2"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		}
	},
	"publishConfig": {
		"access": "public"
	}
}
