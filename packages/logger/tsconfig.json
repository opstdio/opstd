{
	"extends": "../tsconfig/base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"removeComments": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
