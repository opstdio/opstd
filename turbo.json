{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env"],
	"tasks": {
		"build": {
			"dependsOn": ["^lint", "^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env"],
			"outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"format": {
			"inputs": ["{src,tests}/**/*.{js,ts,tsx}"],
			"outputs": []
		},
		"lint": {
			"inputs": ["{src,tests}/**/*.{js,ts,tsx}"],
			"outputs": []
		},
		"test": {
			"inputs": ["{src,tests}/**/*.{js,ts,tsx}"],
			"outputs": ["coverage/**"]
		}
	}
}